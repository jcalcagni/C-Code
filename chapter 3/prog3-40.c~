#include <stdio.h>

main()
{
	

	int counter = 1, line = 8;

/*	
	printf ("* ");
	printf (" ");
	printf ("\n");
*/
	
	while (line > 0) {
	   /* printf ("line is %d\n", line); */
	if (line % 2 != 0) 
	   printf (" ");

	   while (counter <= 8) {
	      printf ("* ");
              counter++;
             /* printf ("counter is %d\n", counter); */
	   }

	--line;

	printf ("\n");
	counter = 1;
	}	



	return 0;


}

